# Description: List X fonts
# URL: http://xorg.freedesktop.org
# Depends on: xorg-libx11

name=xorg-xlsfonts
version=1.0.6
release=1
source=(https://www.x.org/releases/individual/app/xlsfonts-$version.tar.bz2)

build() {
	cd xlsfonts-$version

	./configure --prefix=/usr

	make
	make DESTDIR=$PKG install
}
