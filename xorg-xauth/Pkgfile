# Description: X authority file utility
# URL: http://xorg.freedesktop.org
# Depends on: xorg-server

name=xorg-xauth
version=1.1
release=1
source=(https://www.x.org/releases/individual/app/xauth-$version.tar.bz2)

build() {
	cd xauth-$version

	./configure --prefix=/usr

	make
	make DESTDIR=$PKG install
}
