# Description: xorg font font-bitstream-type1
# URL: http://xorg.freedesktop.org
# Depends on: fontconfig xorg-mkfontscale

name=xorg-font-bitstream-type1
version=1.0.3
release=1
source=(https://www.x.org/releases/individual/font/font-bitstream-type1-$version.tar.bz2)

build() {
	cd font-bitstream-type1-$version

	./configure --prefix=/usr

	make
	make DESTDIR=$PKG install

	rm $PKG/usr/share/fonts/X11/Type1/fonts.{dir,scale}
}
